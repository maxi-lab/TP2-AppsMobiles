<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TP2"
        tools:targetApi="31">
        <activity
            android:name=".ChangePopulation"
            android:exported="false"
            android:label="@string/title_activity_change_population"
            android:theme="@style/Theme.TP2" />
        <activity
            android:name=".DeleteByName"
            android:exported="false"
            android:label="DeleteByName"
            android:parentActivityName=".CapitalsActivity"
            android:theme="@style/Theme.TP2" />
        <activity
            android:name=".CreateCapitalActivity"
            android:exported="false"
            android:label="@string/title_activity_create_capital"
            android:theme="@style/Theme.TP2" />
        <activity
            android:name=".GetCapitalByNameActivity"
            android:exported="false"
            android:label="@string/title_activity_get_capital_by_name"
            android:parentActivityName=".CapitalsActivity"
            android:theme="@style/Theme.TP2" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="MainActivity"
            android:theme="@style/Theme.TP2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CapitalsActivity"
            android:exported="true"
            android:label="CapitalsActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.TP2" />
        <activity
            android:name=".GuessNumber"
            android:exported="true"
            android:label="GuessNumber"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.TP2" />
    </application>

</manifest>